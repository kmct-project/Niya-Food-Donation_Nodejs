<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Enter Address</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addressForm" action="/trusts/accept-donation" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="addressInput" class="form-label">Address</label>
            <input type="hidden" id="productIdInputValue" name="productId">
            <input type="text" class="form-control" id="addressInput" name="address" required>
          </div>
          <input type="hidden" id="selectedProductId" name="productId">

          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const chooseThisButtons = document.querySelectorAll('.add-to-cart-btn');
    const addressForm = document.getElementById('addressForm');
    const selectedProductIdInput = document.getElementById('selectedProductId');

    chooseThisButtons.forEach(button => {
      button.addEventListener('click', function () {
        const selectedProductId = this.getAttribute('data-product-id');
        selectedProductIdInput.value = selectedProductId;
      });
    });

    // Submit the form when Save button is clicked
    addressForm.addEventListener('submit', function (event) {
      event.preventDefault();

      const productId = selectedProductIdInput.value;
      const address = document.getElementById('addressInput').value;

      // Set values in the hidden form
      document.getElementById('productIdInputValue').value = productId; // Change this line

      // Submit the form
      document.getElementById('addressForm').submit();

      // Close the modal
      const modal = new bootstrap.Modal(document.getElementById('exampleModal'));
      modal.hide();
    });
  });
</script>



