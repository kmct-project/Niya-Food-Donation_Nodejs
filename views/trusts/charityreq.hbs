<div class="container" id="">

    <div class="page-wrapper mt-5">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-lg-16 d-flex no-block ">
                    <h4 class="page-title text-center mb-3">Charity Requests</h4><br>
                </div>
                {{!-- <div class="col-lg-16 d-flex no-block ">
                    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Add Item For Donation
                    </button>
                </div> --}}
            </div>

        </div>
        <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#reqModal">
            Send a Request for Food
        </button>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Type of food</th>
                                <th>Quantity</th>
                                <th>Time of delivery</th>
                                <th>Date of delivery</th>
                                <th>Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each trustreqs}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{this.type}}</td>
                                <td>{{this.qty}}</td>
                                <td>{{this.td}}</td>
                                <td>{{this.dd}}</td>

                              <td>
  <a href="/trusts/delete-req?id={{this._id}}" class="btn btn-danger"
     onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">
    <i class="bi bi-trash" aria-hidden="true"></i>
  </a>
</td>


                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="reqModal" tabindex="-1" aria-labelledby="reqLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reqLabel">Request fo Food</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="" action="/trusts/add-req" method="POST">
                    {{#if user}}
                    <input type="hidden" class="form-control" id="addressInput" value="{{user.Orgname}}" name="name"
                        required readonly>
                    <input type="hidden" class="form-control" id="addressInput" value="{{user.Phone}}" name="Phone"
                        required readonly>
                    <input type="hidden" class="form-control" id="addressInput" value="{{user.Address}}" name="Address"
                        required readonly>
                    {{/if}}
                    <div class="mb-3">
                        <label for="addressInput" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="addressInput" name="desc" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="addressInput" class="form-label">Type of food</label>
                        <input type="text" class="form-control" id="addressInput" name="type" required>
                    </div>

                    <div class="mb-3">
                        <label for="addressInput" class="form-label">Quantity</label>
                        <input type="text" class="form-control" id="addressInput" name="qty" required>
                    </div>

                    <div class="mb-3">
                        <label for="addressInput" class="form-label">Time of delivery</label>
                        <input type="time" class="form-control" id="addressInput" name="td" required>
                    </div>

                    <div class="mb-3">
                        <label for="addressInput" class="form-label">Date of delivery</label>
                        <input type="date" class="form-control" id="addressInput" name="dd" required>
                    </div>




                    <button type="submit" class="btn btn-primary">Send</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>