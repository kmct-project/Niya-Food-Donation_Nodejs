<section>
    <div class="container mt-2">
        <center>
            {{#if volunteering}}
            <div class="page-wrapper mt-5">
                <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-lg-16 d-flex no-block ">
                            <h4 class="page-title">Orders</h4><br>
                        </div>

                    </div>

                </div>

                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">

                                    <div class="accordion" id="accordionExample">
                                        {{#each products}}
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="">
                                                <button class="accordion-button collapsed" type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#collapse{{incremented @index}}"
                                                    aria-expanded="false" aria-controls="">
                                                    <img src="/images/donate-images/{{this.productDetails._id}}.png"
                                                        alt="" style="width: 10rem">
                                                    <div style="margin-left: 10px;">
                                                        From : <b>{{this.productDetails.donername}}</b><br>
                                                        To : <b>{{this.trustDetails.Orgname}}</b><br>
                                                        Date : <b>{{this.date}}</b>

                                                    </div>
                                                </button>
                                            </h2>
                                            <div id="collapse{{incremented @index}}" class="accordion-collapse collapse"
                                                aria-labelledby="" data-bs-parent="#accordionExample">
                                                <div class="accordion-body text-left float-start"
                                                    style="    text-align: justify;">
                                                    <ul>
                                                        <li> Product Name : <b>{{this.productDetails.name}}</b></li>
                                                        <li> Product Type : <b>{{this.productDetails.type}}</b></li>
                                                        <li> Quantity : <b>{{this.productDetails.quantity}}</b></li>
                                                        <li>Doner Address : <b>{{this.productDetails.location}}</b></li>
                                                        <li>Charity Address : <b>{{this.address}}</b></li>
                                                        <li>Pickup Date : <b>{{this.productDetails.pdate}}</b></li>
                                                        <li>Pickup Time : <b>{{this.productDetails.ptime}}
                                                            </b></li>
                                                        <li> Contact Number (Trust) :
                                                            <b>{{this.trustDetails.Phone}}</b><br>
                                                        </li>
                                                        <li> Contact Number (Doner) :
                                                            <b>{{this.productDetails.donernumber}}</b><br>
                                                        </li>
                                                    </ul>
                                                    <button
                                                        onclick="accept('{{this._id}}'),confirm('Are You Sure to Take this order ?')"
                                                        class="add-to-cart-btn btn btn-dark text-white">Take
                                                        the
                                                        Order</button>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}

                                    </div>




                                    {{!-- <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Item Name</th>
                                            <th>Item Type</th>
                                            <th>Quantity</th>
                                            <th>Location</th>

                                            <th>Donated By</th>
                                            <th>Trust</th>
                                            <th>Destination</th> --}}
                                            {{!-- <th>Edit</th>
                                            <th>Delete</th> --}}
                                            {{!--
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <td>{{incremented @index}}</td>
                                            <td>{{this.productDetails.name}}</td>
                                            <td>{{this.productDetails.type}}</td>
                                            <td>{{this.productDetails.quantity}}</td>
                                            <td>{{this.productDetails.location}}</td>


                                            <td>{{this.productDetails.donername}}</td>
                                            <td>{{this.trustDetails.Orgname}}</td>
                                            <td>{{this.address}}</td>
                                            <td>
                                            </td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div> --}}


            {{else}}
            <h3>Welcome</h3>
            <a href="/trusts/signin" class="btn btn-primary">Login</a>

            {{/if}}
        </center>

    </div>
</section>





<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/trusts/add-trustreq" enctype="multipart/form-data" method="POST">
                    <div class="mb-3">
                        <label for="" class="form-label">Item Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label for="" class="form-label">Item Type</label>
                        <input type="text" class="form-control" name="type" required>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="" class="form-label">Quantity</label>
                                <input type="number" class="form-control" name="quantity" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="" class="form-label">Price</label>
                                <input type="number" class="form-control" name="Price" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="" class="form-label">Your Location</label>
                        <input type="text" class="form-control" name="location" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Send Request</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                </form>
            </div>

        </div>
    </div>
</div>


<script>
    function accept(productId) {
        window.location.href = `/volunteers/accept-donation/${productId}`;
    }
</script>