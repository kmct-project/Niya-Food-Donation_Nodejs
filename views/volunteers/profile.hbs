<div class="row mx-auto mb-5">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <br><br>
            <div class="card p-5 shadow mb-4">
                <h2 class="text-center">My Profile</h2>
                {{#if volunteering}}
                <form action="#!" method="POST">

                    <div class="form-group mt-2">
                        <label>Name</label>
                        <input type="text" class="form-control" value="{{volunteering.FName}} {{volunteering.LName}}"
                            name="Orgname" placeholder="Enter Organization Name" required>
                    </div>
                    <div class="form-group mt-4">
                        <label>Email</label>
                        <input type="email" class="form-control" value="{{volunteering.Email}}" name="Email"
                            placeholder="Enter Email number" required>
                    </div>
                    <div class="form-group mt-4">
                        <label>Phone Number</label>
                        <input type="text" class="form-control" value="{{volunteering.Phone}}" name="Phone"
                            placeholder="Enter Phone number" required>
                    </div>

                    <div class="form-group mt-4">
                        <label>Emergency Phone Number</label>
                        <input type="text" class="form-control" name="Ephone" value="{{volunteering.Ephone}}"
                            placeholder="" required>
                    </div>
                    <div class="form-group mt-3">
                        <label>Physical Address</label>
                        <input type="text" class="form-control" name="Address" value="{{volunteering.Address}}"
                            placeholder="" required>
                    </div>
                    <div class="form-group mt-3">
                        <label>Age</label>
                        <input type="text" class="form-control" name="Age" value="{{volunteering.Age}}" placeholder=""
                            required>
                    </div>
                    <div class="form-group mt-3">
                        <label>Status</label>
                        <input type="text" class="form-control" name="Age" value="{{volunteering.Jstatus}}"
                            placeholder="" required>
                    </div>

                    <div class="form-group mt-4">
                        <label>Availabe Time</label>
                        <input type="text" class="form-control" name="Time" value="{{volunteering.Time}}" placeholder=""
                            required>
                    </div>




                    <a href="/volunteers/" class="btn btn-dark w-100 mt-5">Back to home</a>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>