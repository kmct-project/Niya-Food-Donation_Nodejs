<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <br><br>
        <div class="container mt-5">
            <div class="card p-5 shadow">
                <h2 class="text-center">Volunteer Sign In</h2>
                <form action="/volunteers/signin" method="POST">
                    {{#if signInErr}}
                    <div class="alert alert-danger" role="alert">
                        <p class="error alert-heading">{{signInErr}}</p>
                    </div>
                    {{/if}}
                    <div class="form-group mt-4">
                        <label>Email address</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter Email" required>
                    </div>
                    <div class="form-group mt-4">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="Password" required>
                    </div>
                    <div class="row">
                        <a href="/volunteers/signup" class="mt-4">Create a New Account ?</a>
                        <button type="submit" class="btn btn-primary mt-2">Sign In</button>
                        <a href="/doners/" class="mt-4 text-center">Back To Home Page</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>