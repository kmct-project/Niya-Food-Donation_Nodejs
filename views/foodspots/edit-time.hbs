<div class="page-wrapper">

    <div class="page-breadcrumb">

        <section>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-center">Edit Time</h2>
                        <form action="/foodspots/edit-time/{{time._id}}" enctype="multipart/form-data" method="POST">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="">From</label>
                                    <input type="time" name="from" value="{{time.from}}" class="form-control" required>
                                </div>
                                <div class="col-lg-6">
                                    <label for="">Am/Pm</label>
                                    <select class="form-select" name="fromampm" value="{{time.fromampm}}"
                                        aria-label="Default select example">
                                        <option value="fromampm" selected disabled>{{time.fromampm}}</option>
                                        <option value="am">am</option>
                                        <option value="pm">pm</option>
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="">To</label>
                                    <input type="time" name="to" value="{{time.to}}" class="form-control" required>
                                </div>
                                <div class="col-lg-6">
                                    <label for="">Am/Pm</label>
                                    <select class="form-select" name="toampm" value="{{time.toampm}}"
                                        aria-label="Default select example">
                                        <option value="{{time.toampm}}" selected disabled>{{time.toampm}}</option>
                                        <option value="am">am</option>
                                        <option value="pm">pm</option>
                                    </select>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success mt-4">Update Time</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>