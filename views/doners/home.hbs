


<section>
    <div class="container mt-2">
        <center>
            {{#if doner}}
            <h5>Hi {{doner.Orgname}}, Welcome</h5>

            <div class="page-wrapper mt-5">
                <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-lg-16 d-flex no-block ">
                            <h4 class="page-title">Your Donations</h4><br>
                        </div>
                        <div class="col-lg-16 d-flex no-block ">
                            <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Add Item For Donation
                            </button>
                        </div>
                    </div>

                </div>

                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Item Name</th>
                                            <th>Item Type</th>
                                            <th>Quantity</th>
                                            <th>Location</th>
                                            <th>Image</th>
                                            <th>Edit</th>
                                            <th>Delete</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <td>{{incremented @index}}</td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.type}}</td>
                                            <td>{{this.quantity}}</td>
                                            <td>{{this.location}}</td>
                                            <td><img src="/images/donate-images/{{this._id}}.png" alt=""
                                                    style="width: 3rem"></td>
                                            <td><a href="/doners/edit-donate/{{this._id}}" class="btn btn-primary"><i
                                                        class="bi bi-pen" aria-hidden="true"></i></a></td>
                                            <td><a href="/doners/delete-donate/{{this._id}}" class="btn btn-danger"
                                                    onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')"><i
                                                        class="bi bi-trash" aria-hidden="true"></i></a></td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            {{else}}
            <style>
    body{
        background-image:url("/images/banner1.jpeg");
        background-repeat: no-repeat;
        background-size: cover;
    

    }
</style>
            <br><br>
            <div class="card p-5 mt-5 shadow">
                <h3>Welcome To Food Donation Corner</h3>
                <p>Join us in the mission to make a difference! Become a Food Donor and contribute to reducing food
                    waste. Your surplus food can nourish those in need, fostering a community of compassion and
                    sustainability. Contact us to make a positive impact today."</p>
                    <h3 class="mt-4 mb-3">Who Are You?</h3>
                <div class=" justify-content-between">
                    <a href="/doners/signin" class="btn btn-primary w-25  mr-5">Food Doner</a>
                    <a href="/trusts/signin" class="btn btn-dark w-25">Charity Trust</a>
                      <a href="/volunteers/signin" class="btn btn-danger w-25  mr-5">Volunteer</a>
                </div>
            </div>


            {{/if}}
        </center>

    </div>
</section>





<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/doners/add-product" enctype="multipart/form-data" method="POST">
                    <input type="hidden" class="form-control" name="donername" {{#if doner}} value="{{doner.Orgname}}"
                        {{/if}}>

                    <div class="mb-3">
                        <label for="" class="form-label">Item Name</label>
                        <input type="text" class="form-control" name="name">
                    </div>

                    <div class="mb-3">
                        <label for="" class="form-label">Item Type</label>
                        <input type="text" class="form-control" name="type">
                    </div>
                    <div class="row">
                            <div class="mb-3">
                                <label for="" class="form-label">Quantity</label>
                                <input type="number" class="form-control" name="quantity">
                            </div>
                        {{!-- <div class="col-lg-6">
                        </div> --}}
                        {{!-- <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="" class="form-label">Price</label>
                                <input type="number" class="form-control" name="Price">
                            </div>
                        </div> --}}
                    </div>

                    <div class="mb-3">
                        <label for="" class="form-label">Location</label>
                        <input type="text" class="form-control" name="location">
                    </div>
                    <div class="mb-5">
                        <label for="">Image</label>
                        <input type="file" name="Image" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                </form>
            </div>

        </div>
    </div>
</div>