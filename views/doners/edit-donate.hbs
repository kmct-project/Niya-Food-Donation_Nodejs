<div class="page-wrapper mt-5 mb-4">
    <br><br><br>
    <div class="page-breadcrumb mt-5 mb-5">

        <div class="container mt-4 mb-4">
            <div class="card shadow p-4">
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <h2 class="text-center">Edit <span class="text-info">{{product.name}}</span></h2>
                        <form action="/doners/edit-donate/{{product._id}}" enctype="multipart/form-data" method="POST">
                            <label for="" class="mt-3 mb-3">Item Name</label>
                            <input type="text" name="name" class="form-control" value="{{product.name}}" required>

                            <div class="mb-3">
                                <label for="" class="form-label">Item Type</label>
                                <input type="text" class="form-control" value="{{product.type}}" name="type">
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label for="" class="form-label">Quantity</label>
                                        <input type="number" class="form-control" value="{{product.quantity}}"
                                            name="quantity">
                                    </div>
                                </div>

                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">Pickup Place</label>
                                <input type="text" class="form-control" value="{{product.location}}" name="location">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Pickup Date</label>
                                <input type="date" class="form-control" value="{{product.pdate}}" name="pdate">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Pickup Time</label>
                                <input type="time" class="form-control" value="{{product.ptime}}" name="ptime">
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Desc About Food</label>
                                <textarea type="text" class="form-control" value="{{product.desc}}"
                                    name="desc"></textarea>
                            </div>

                            <label for="" class="mt-3">Image</label>

                            <input type="file" name="Image" class="form-control" onchange="viewImage(event)"><br>
                            <img src="/images/donate-images/{{product._id}}.png" alt=""
                                style="width: 9rem; margin-bottom: 8px;" id="imgView">
                            <br>
                            <button type="submit" class="btn btn-primary mb-5 w-100 mt-4">Submit</button>
                            <br>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>