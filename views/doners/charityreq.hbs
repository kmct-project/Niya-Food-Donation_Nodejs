<section>
    <div class="container mt-2">
        <center>


            <div class="page-wrapper mt-5">
                <div class="page-breadcrumb">
                    <div class="row">
                        <a href="/doners/welcome" class="btn btn-dark w-25 mb-3">Back to home</a>

                        <div class="col-lg-16 d-flex no-block ">
                            <h4 class="page-title text-center mb-3">Charity Requests</h4><br>
                        </div>
                        {{!-- <div class="col-lg-16 d-flex no-block ">
                            <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Add Item For Donation
                            </button>
                        </div> --}}
                    </div>

                </div>

                <div class="container-fluid" id="req">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Charity Name </th>
                                            <th>Charity Location</th>
                                            <th>Charity Number</th>

                                            <th>Type of food</th>
                                            <th>Quantity</th>
                                            <th>Time of delivery</th>
                                            <th>Date of delivery</th>
                                            <th>Donate Now</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each trustreqs}}
                                        <tr>
                                            <td>{{incremented @index}}</td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.Phone}}</td>
                                            <td>{{this.Address}}</td>

                                            <td>{{this.type}}</td>
                                            <td>{{this.qty}}</td>
                                            <td>{{this.td}}</td>
                                            <td>{{this.dd}}</td>
                                            <td><button   data-product-id="{{this._id}}" type="button" class="btn btn-primary add-to-cart-btn" data-bs-toggle="modal"
                                                    data-bs-target="#exampleModal" >
                                                    Donate
                                                </button></td>
                                            {{!-- <td><a href="/tursts/delete-req/{{this._id}}" class="btn btn-danger"
                                                    onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')"><i
                                                        class="bi bi-trash" aria-hidden="true"></i></a></td> --}}

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </center>

    </div>  
</section>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Enter Your Address</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addressForm" action="/doners/accept-request" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="addressInput" class="form-label">Address</label>
            <input type="hidden" id="productIdInputValue" name="productId">
            <input type="text" class="form-control" id="addressInput" name="address" {{#if user}}
              value="{{user.Address}}" {{/if}} required>
          </div>
          <div class="mb-3">
            <label for="addressInput" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="addressInput" {{#if user}} value="{{user.Phone}}"
              {{/if}}name="phone" required>
          </div>

          <input type="hidden" name="date" id="datetime">

          <input type="hidden" id="selectedProductId" name="productId">

          <button type="submit" class="btn btn-primary">Book Now</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </form>
      </div>
    </div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    const chooseThisButtons = document.querySelectorAll('.add-to-cart-btn');
    const addressForm = document.getElementById('addressForm');
    const selectedProductIdInput = document.getElementById('selectedProductId');

    chooseThisButtons.forEach(button => {
      button.addEventListener('click', function () {
        const selectedProductId = this.getAttribute('data-product-id');
        selectedProductIdInput.value = selectedProductId;
      });
    });

    addressForm.addEventListener('submit', function (event) {
      event.preventDefault();

      const requestId = selectedProductIdInput.value;
      const address = document.getElementById('addressInput').value;

      document.getElementById('productIdInputValue').value = requestId; 

      document.getElementById('addressForm').submit();

      const modal = new bootstrap.Modal(document.getElementById('exampleModal'));
      modal.hide();
    });
  });
</script>