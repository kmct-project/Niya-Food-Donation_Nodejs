<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">All Food Categories</h4>
                <div class="ms-auto text-end">
             <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add Category</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Manage</th>

                               
                            </tr>
                        </thead>
                        <tbody>
                            {{#each fcats}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td><img src="/images/food-category-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                                <td>{{this.Name}}</td>
                                <td>
                                    <a href="/admin/edit-cat/{{this._id}}" class="btn btn-primary"><i class="bi bi-pen"></i></a>


                                    <a href="/admin/delete-fcat/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')"><i class="fa fa-trash" aria-hidden="true"></i></a></td>

                            </tr>
                            {{/each}}



                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Food Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/admin/all-food-category" enctype="multipart/form-data" method="POST">
                    <label for="">Food Category Name</label>
                    <input type="text" name="Name" class="form-control" required>

                
                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" required>

                    <button type="submit" class="btn btn-primary w-100 mt-4">Add</button>
                </form>
      </div>
      
    </div>
  </div>
</div>