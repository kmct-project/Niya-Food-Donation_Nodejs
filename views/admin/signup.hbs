<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <h2 class="text-center">Sign Up</h2>
            <form action="/admin/signup" method="POST">
                {{#if signUpErr}}
                <div class="alert alert-danger" role="alert">
                    <p class="error alert-heading">{{signUpErr}}</p>
                </div>
                {{/if}}
                <div class="form-group mt-3">
                    <label>Name</label>
                    <input type="text" class="form-control" pattern="/^[0-9\s-]{10}$/" title="Name should be in Char"
                        name="Name" placeholder="Enter Name" required>
                </div>
                <div class="form-group mt-3">
                    <label>Email address</label>
                    <input type="email" class="form-control" pattern="/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,}$/i"
                        title="invalid email" name="Email" placeholder="Enter Email" required>
                </div>
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password" required>
                </div>
                <div class="form-group mt-3">
                    <label>Admin Code</label>
                    <input type="password" class="form-control" name="Code" placeholder="Code" required>
                </div>
                <div class="row">
                    <a href="/admin/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>