<div class="page-wrapper mb-4">

    <div class="page-breadcrumb mb-5">

        <div class="container mt-4 mb-4">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <h2 class="text-center">Edit <span class="text-info">{{fcat.Name}}</span></h2>
                    <form action="/admin/edit-cat/{{fcat._id}}" enctype="multipart/form-data" method="POST">
                        <label for="" class="mt-3">Name</label>
                        <input type="text" name="Name" class="form-control" value="{{fcat.Name}}" required>

                        <label for="" class="mt-3">Image</label>

                        <input type="file" name="Image" class="form-control" onchange="viewImage(event)"><br>
                        <img src="/images/food-category-images/{{fcat._id}}.png" alt=""
                            style="width: 9rem; margin-bottom: 8px;" id="imgView">
                        <br>
                        <button type="submit" class="btn btn-primary mb-5 w-100 mt-4">Submit</button>
                        <br>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>