<div class="row mx-auto mb-5">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <h2 class="text-center">DonersSign Up</h2>
            <form action="/doners/signup" method="POST">

                <div class="form-group mt-4">
                    <label>Name of Organization</label>
                    <input type="text" class="form-control" name="Orgname" placeholder="Enter Organization Name">
                </div>
                  <div class="form-group mt-4">
                    <label>Phone Number</label>
                    <input type="number" class="form-control" name="Phone" placeholder="Enter Phone number">
                </div>
       
             <div class="form-group mt-4">
                    <label>Place</label>

                  <select class="form-select" name="Place" aria-label="Default select example">
                    <option selected disabled>Select</option>
                    <option value="Calicut">Calicut</option>
                    </select>
                </div>
                   <div class="form-group mt-4">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Phone number">
                </div>
                 <div class="form-group mt-4">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Address" placeholder="Enter Phone number">
                </div>
                <div class="form-group mt-4">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
                <div class="row">
                    <a href="/doners/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>