<div class="row mx-auto mb-5">
    <div class="col-md-6 mx-auto">
         <br><br><br>
                    <div class="card p-5 shadow mb-4">
        <div class="container mt-2">
            <h2 class="text-center">Charity Trust Sign Up</h2>
            <form action="/trusts/signup" method="POST">

                <div class="form-group mt-4">
                    <label>Name of Organization</label>
                    <input type="text" class="form-control" name="Orgname" placeholder="Enter Organization Name"
                        required>
                </div>
                <div class="form-group mt-4">
                    <label>Reg Number / GST Number</label>
                    <input type="number" class="form-control" name="Rnumber" placeholder="Enter Phone number" required>
                </div>
                <div class="form-group mt-4">
                    <label>Phone Number</label>
                    <input type="number" class="form-control" name="Phone" placeholder="Enter Phone number" required>
                </div>
                <div class="form-group mt-4">
                    <label>Location</label>
                    <input type="text" class="form-control" name="Address" placeholder="Enter Phone number" required>
                </div>

                <div class="form-group mt-4">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Phone number" required>
                </div>



                <div class="form-group mt-4">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
                <div class="row">
                    <a href="/trusts/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                                    <a href="/doners/" class="mt-4 text-center">Back To Home Page</a>

                </div>
            </form>
        </div>
    </div>
    </div>
</div>