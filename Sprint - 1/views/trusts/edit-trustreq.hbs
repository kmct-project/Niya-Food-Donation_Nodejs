<div class="page-wrapper mt-5 mb-4">
    <br><br><br>
    <div class="page-breadcrumb mt-5 mb-5">

        <div class="container mt-4 mb-4">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <h2 class="text-center">Edit <span class="text-info">{{donate.name}}</span></h2>
                    <form action="/doners/edit-donate/{{donate._id}}" enctype="multipart/form-data" method="POST">
                        <label for="" class="mt-3 mb-3">Item Name</label>
                        <input type="text" name="name" class="form-control" value="{{donate.name}}" required>

                        <div class="mb-3">
                            <label for="" class="form-label">Item Type</label>
                            <input type="text" class="form-control" value="{{donate.type}}" name="type">
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="" class="form-label">Quantity</label>
                                    <input type="number" class="form-control" value="{{donate.quantity}}"
                                        name="quantity">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="" class="form-label">Price</label>
                                    <input type="number" class="form-control" value="{{donate.Price}}" name="Price">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="" class="form-label">Location</label>
                            <input type="text" class="form-control" value="{{donate.location}}" name="location">
                        </div>

                        <label for="" class="mt-3">Image</label>

                        <input type="file" name="Image" class="form-control" onchange="viewImage(event)"><br>
                        <img src="/images/donate-images/{{donate._id}}.png" alt=""
                            style="width: 9rem; margin-bottom: 8px;" id="imgView">
                        <br>
                        <button type="submit" class="btn btn-primary mb-5 w-100 mt-4">Submit</button>
                        <br>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>