<style>
    body{
        background-image: url();
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <div class="card p-4 shadow">
            <h2 class="text-center">foodspots Sign Up</h2>
            <form action="/foodspots/signup" method="POST">
                {{#if signUpErr}}
                <div class="alert alert-danger" role="alert">
                    <p class="error alert-heading">{{signUpErr}}</p>
                </div>
                {{/if}}
                <div class="form-group mt-3">
                    <label>Name of Organization</label>
                    <input type="text" class="form-control" name="Name" placeholder="" required>
                </div>
                 <div class="form-group mt-3">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Name" placeholder="" required>
                </div>
                 <div class="form-group mt-3">
                    <label>Contact Number</label>
                    <input type="number" class="form-control" name="Phone" placeholder="" required>
                </div>
               
                <div class="form-group mt-3">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="" required>
                </div>
                 
                 <div class="form-group mt-3">
                    <label>Business Reg no / Tax id</label>
                    <input type="text" class="form-control" name="Address" placeholder="" required>
                </div>
                 
                
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="" required>
                </div>
            
                <div class="row">
                    <a href="/foodspots/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>