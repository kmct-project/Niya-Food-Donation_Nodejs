<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="container mt-5">
            <h2 class="text-center">Volunteer Sign Up</h2>
            <form action="/volunteer/signup" method="POST">
                {{#if signUpErr}}
                <div class="alert alert-danger" role="alert">
                    <p class="error alert-heading">{{signUpErr}}</p>
                </div>
                {{/if}}
                <div class="form-group mt-3">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter Name">
                </div>
                 <div class="form-group mt-3">
                    <label>Phone</label>
                    <input type="number" class="form-control" name="Phone" placeholder="Enter Name">
                </div>
                <div class="form-group mt-3">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email">
                </div>
                 <div class="form-group mt-3">
                    <label>Place</label>
                    <input type="text" class="form-control" name="Place" placeholder="Enter Name">
                </div>
                 <div class="form-group mt-3">
                    <label>Address</label>
                    <input type="text" class="form-control" name="Address" placeholder="Enter Name">
                </div>
                 <div class="form-group mt-3">
                    <label>Age</label>
                    <input type="number" class="form-control" name="Age" placeholder="Enter Name">
                </div>
                 <div class="form-group mt-3">
                   <select class="form-select" name="Jstatus" aria-label="Default select example">
  <option selected>Select Your Status</option>
  <option value="Employee">Employee</option>
  <option value="Unemployee">Unemployee</option>
  <option value="Student">Student</option>
</select>
                </div>
                <div class="form-group mt-3">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password">
                </div>
            
                <div class="row">
                    <a href="/volunteer/signin" class="mt-4 float-right">Already Have Account ?</a>
                    <button type="submit" class="btn btn-primary mt-2">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>